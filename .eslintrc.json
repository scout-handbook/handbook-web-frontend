{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 3,
		"sourceType": "script"
	},
	"env": {
		"browser": true
	},
	"plugins": [
		"compat",
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"compat/compat": "warn",
		"no-warning-comments": "warn",
		"strict": ["error", "never"],
		"@typescript-eslint/array-type": ["error", "generic"],
		"@typescript-eslint/indent": ["error", "tab"],
		"@typescript-eslint/member-ordering": "error",
		"@typescript-eslint/no-extraneous-class": "error",
		"@typescript-eslint/no-namespace": ["error", {"allowDeclarations": true}],
		"@typescript-eslint/no-non-null-assertion": "off",
		"@typescript-eslint/no-this-alias": "error"
	},
	"globals": {
		"COMPETENCES": false,
		"CONFIG": false,
		"FIELDS": false,
		"LOGINSTATE": false,
		"AfterLoadEvent": false,
		"authenticationSetup": false,
		"cacheThenNetworkRequest": false,
		"competenceBubbleDetailOnClick": false,
		"filterXSS": false,
		"getLessonById": false,
		"headerSetup": false,
		"historySetup": false,
		"lessonViewSetup": false,
		"loginRedirect": false,
		"loginstateEvent": false,
		"metadataEvent": false,
		"metadataSetup": false,
		"navigationOpen": false,
		"navigationSetup": false,
		"reflowCompetenceBubbles": false,
		"reflowNavigation": false,
		"refreshLogin": false,
		"request": false,
		"showCompetenceListView": false,
		"showCompetenceView": false,
		"showdown": false,
		"showFieldView": false,
		"showLessonView": false,
		"showLessonListView": false,
		"TOCFieldOnClick": false,
		"TOCLessonOnClick": false,
		"TOCSetup": false,
		"toggleCompetenceBubble": false,
		"toggleLessonOffline": false,
		"toggleNavigation": false,
		"urlEscape": false,
		"WebFont": false,
		"xssOptions": false
	}
}
